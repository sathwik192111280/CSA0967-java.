import java.io.*;
import java.util.*;
class numberpyramid
{
public static void main(String args[])
{
int i,j,n=5;
for(i=0;i<n;i++)
{
int number=1;
System.out.printf("%"+(n-i)*2+"s","");
for(j=0;j<=i;j++)
{
System.out.printf("%4d",number);
number=number*(i-j)/(j+1);
}
System.out.println();
}
}
}

output


             1
           1   1
         1   2   1
       1   3   3   1
     1   4   6   4   1
